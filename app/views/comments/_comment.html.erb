<div id="<%= dom_id comment %>">
<div class="card">
  <div class="card-body">
  <%= "#{time_ago_in_words(comment.created_at || Time.now)} ago" %>

  <br>
   <%= comment.body %>
      <%#=link_to 'reply', new_post_comment_path(@post, parent_id: comment.id), remote: true, class: 'd-block' %>
      <div class = "btn-group float-end">
         <%= link_to "Edit", comment ,class:"btn btn-warning" %>
         <%= button_to "Delete", [@post, comment],class:"btn btn-danger", method: :delete %>
      </div>
      </div>
  </div>

  <% if comment.replies.any? %>
    <% comment.replies.each do |reply| %> 
      <%= render partial: 'comments/reply', locals: { reply: reply } %>
    <% end %>
  <% end %>
  <div id="reply-form-<%= comment.id %>"></div>
    <%= link_to t("Show comment details"), comment ,class:"btn btn-primary" %>
    <br>
    <br></div>


