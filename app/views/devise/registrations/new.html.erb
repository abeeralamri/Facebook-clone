<h2 style="text-align:center"><%=t'Sign up'%></h2>
<div style="text-align:center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label t('first_name') %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first name" %>
  </div>

  <div class="field">
    <%= f.label t('last_name')%><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last name" %>
  </div>

  <div class="field">
    <%= f.label t('Email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t('password conformation')%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit t("Sign up" ),class:"btn btn-primary" %>
  
  </div>
<% end %>
  <br>
<%= render "devise/shared/links" %>
</div>