<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_area :text %>
  </div>
  
  <div>
    <%= form.label "Public", style: "display: block" %>
    <%= form.check_box :display, as: :boolean, checked_value: false %>
  </div>
  
  <div>
    <%= form.label "Private", style: "display: block" %>
    <%= form.check_box :display, as: :boolean, checked_value: true, unchecked_value: false %>
  </div>

 

  <div>
    <%= form.submit %>
  </div>
<% end %>
